{
  "root": true,
  "extends": ["custom"],
  "parserOptions": {
    "tsconfigRootDir": "./",
    "project": ["./tsconfig.json", "./tsconfig.node.json"],
    "extraFileExtensions": [".vue"]
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ]
  }
}
