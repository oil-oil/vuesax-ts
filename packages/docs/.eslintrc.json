{
  "root": true,
  "extends": [
    "custom"
  ],
  "parserOptions": {
    "tsconfigRootDir": "./",
    "project": [
      "./tsconfig.json"
    ],
    "extraFileExtensions": [
      ".vue"
    ]
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "vue/no-v-model-argument": "off",
    "no-console": "error",
    "@typescript-eslint/no-var-requires": "off"
  }
}